<!DOCTYPE html>
<html>
<head>
    <title>Lista de Productos</title>
</head>
<body>
    <h2>Bienvenido, {{userData.name}}!</h2>

    {{#if userData.admin}}
     <p>Eres un administrador</p>
    {{else}}
    <p>Eres un usuario regular</p>
    
    <h1>Lista de Productos</h1>
    <ul>
        {{#each products}}
        <li>
            <h2>{{this.title}}</h2>
            <p>Descripción: {{this.description}}</p>
            <p>Precio: {{this.price}}</p>
            <p>Categoría: {{this.category}}</p>
            <p>Status: {{this.status}}</p>
            <p>Código: {{this.code}}</p>
            <p>Stock: {{this.stock}}</p>
            <a href="/carts/{{cartId}}/add/{{this._id}}">Agregar al Carrito</a>
        </li>
        {{/each}}
    </ul>
</body>
</html>