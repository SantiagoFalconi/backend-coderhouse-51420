<!DOCTYPE html>
<html>
<head>
    <title>Administración de Usuarios</title>
</head>
<body>
    <h1>Administración de Usuarios</h1>

    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Correo Electrónico</th>
                <th>Tipo de Cuenta</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr>
                <td>{{this.first_name}} {{this.last_name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.role}}</td>
                <td>
                    <a href="/admin/users/{{this._id}}/edit">Editar</a>
                    <a href="/admin/users/{{this._id}}/delete">Eliminar</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</body>
</html>